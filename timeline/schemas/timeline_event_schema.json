{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Timeline Event Schema",
  "description": "Schema for timeline event documents",
  "type": "object",
  "required": ["id", "date", "title", "description"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique event identifier"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Event date"
    },
    "title": {
      "type": "string",
      "minLength": 10,
      "description": "Event title"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "description": "Event description"
    },
    "importance": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "description": "Importance level (1-10)"
    },
    "category": {
      "type": "string",
      "description": "Event category"
    },
    "verification_status": {
      "type": "string",
      "enum": ["pending", "verified", "disputed", "false"],
      "description": "Verification status"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri"
          },
          "title": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        }
      },
      "description": "Information sources"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Event tags"
    },
    "significance": {
      "type": "string",
      "description": "Historical significance"
    }
  },
  "additionalProperties": true
}
