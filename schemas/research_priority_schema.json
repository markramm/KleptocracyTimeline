{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Research Priority Schema",
  "description": "Schema for research priority documents",
  "type": "object",
  "required": ["id", "title", "description", "priority", "status"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^RT-",
      "description": "Unique identifier starting with RT-"
    },
    "title": {
      "type": "string",
      "minLength": 10,
      "description": "Title of the research priority"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "description": "Detailed description"
    },
    "priority": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "description": "Priority level (1-10)"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "in_progress", "completed", "blocked", "abandoned"],
      "description": "Current status"
    },
    "category": {
      "type": "string",
      "description": "Category of research"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Associated tags"
    },
    "estimated_events": {
      "type": "integer",
      "minimum": 0,
      "description": "Estimated number of events"
    },
    "actual_events": {
      "type": "integer",
      "minimum": 0,
      "description": "Actual events created"
    },
    "created_date": {
      "type": "string",
      "format": "date",
      "description": "Creation date"
    },
    "updated_date": {
      "type": "string",
      "format": "date",
      "description": "Last update date"
    },
    "completion_date": {
      "type": "string",
      "format": "date",
      "description": "Completion date"
    },
    "triggered_by": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Events that triggered this priority"
    },
    "time_period": {
      "type": "string",
      "description": "Time period for research"
    },
    "estimated_importance": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "description": "Estimated importance level"
    },
    "research_notes": {
      "type": "string",
      "description": "Additional research notes"
    }
  },
  "additionalProperties": true
}
